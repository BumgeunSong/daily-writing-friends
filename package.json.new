{
  "name": "daily-writing-friends",
  "private": true,
  "version": "0.0.1",
  "description": "DailyWritingFriends monorepo with pnpm workspaces",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "build:functions": "pnpm --filter functions build",
    "serve": "pnpm --filter web serve",
    "type-check": "pnpm --recursive type-check",
    "format": "pnpm --recursive format",
    "format:check": "pnpm --recursive format:check",
    "lint": "pnpm --recursive lint",
    "lint:fix": "pnpm --recursive lint:fix",
    "test": "pnpm --filter web test",
    "test:run": "pnpm --filter web test:run",
    "test:ui": "pnpm --filter web test:ui",
    "test:coverage": "pnpm --filter web test:coverage",
    "dev:emu": "cross-env VITE_USE_EMULATORS=true concurrently \"pnpm emu:start\" \"pnpm --filter web dev --mode e2e\"",
    "emu:start": "firebase emulators:start --only auth,firestore,storage,functions --import ./emulator-data --export-on-exit ./emulator-data",
    "emu:start:clean": "firebase emulators:start --only auth,firestore,storage,functions",
    "emu:stop": "firebase emulators:stop",
    "emu:seed": "node scripts/seed-auth-emulator.js",
    "emu:clear": "firebase emulators:stop && rm -rf ./emulator-data",
    "e2e:setup": "concurrently --kill-others --success first \"pnpm emu:start\" \"pnpm emu:seed\"",
    "e2e:teardown": "pnpm emu:stop",
    "e2e": "cross-env NODE_ENV=test playwright test",
    "e2e:ui": "cross-env NODE_ENV=test playwright test --ui",
    "e2e:debug": "cross-env NODE_ENV=test playwright test --debug",
    "e2e:headed": "cross-env NODE_ENV=test playwright test --headed",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "husky": "^9.1.7"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
