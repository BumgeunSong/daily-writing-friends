rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // PERMISSIVE RULES FOR EMULATOR TESTING ONLY
    // These rules allow broader access for E2E testing
    // DO NOT use these rules in production
    
    // Allow authenticated users to read and write all documents
    // This simplifies E2E testing by removing security barriers
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow unauthenticated reads for certain test scenarios
    // Only enable if your tests require unauthenticated access
    // match /boards/{boardId}/posts/{postId} {
    //   allow read: if true;
    // }
  }
}