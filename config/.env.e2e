# Environment configuration for E2E tests
# This file configures the app to use Firebase emulators for testing

# Firebase Emulator Configuration (E2E Testing)
VITE_USE_EMULATORS=true

# Emulator Host Configuration
VITE_EMULATOR_AUTH_HOST=localhost
VITE_EMULATOR_AUTH_PORT=9099
VITE_EMULATOR_FIRESTORE_HOST=localhost
VITE_EMULATOR_FIRESTORE_PORT=8080
VITE_EMULATOR_STORAGE_HOST=localhost
VITE_EMULATOR_STORAGE_PORT=9199
VITE_EMULATOR_FUNCTIONS_HOST=localhost
VITE_EMULATOR_FUNCTIONS_PORT=5001

# Firebase Configuration (can be dummy values for emulator testing)
VITE_FIREBASE_API_KEY=dummy-api-key-for-emulator
VITE_FIREBASE_AUTH_DOMAIN=demo-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=demo-project
VITE_FIREBASE_STORAGE_BUCKET=demo-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abc123def456
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Test-specific settings
NODE_ENV=test

# Sentry (disabled for tests)
SENTRY_AUTH_TOKEN=

# E2E Test User Credentials (for seeding)
E2E_TEST_EMAIL=e2e@example.com
E2E_TEST_PASSWORD=test1234
E2E_TEST_DISPLAY_NAME=E2E Test User