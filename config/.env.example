# Firebase Configuration
# Copy this file to .env and fill in your Firebase project credentials

# Firebase Project Settings (required)
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Emulator Settings (optional - for development/testing)
# Set to 'true' to use Firebase emulators instead of production services
VITE_USE_EMULATORS=false

# Emulator Host Configuration (only used when VITE_USE_EMULATORS=true)
VITE_EMULATOR_AUTH_HOST=localhost
VITE_EMULATOR_AUTH_PORT=9099
VITE_EMULATOR_FIRESTORE_HOST=localhost
VITE_EMULATOR_FIRESTORE_PORT=8080
VITE_EMULATOR_STORAGE_HOST=localhost
VITE_EMULATOR_STORAGE_PORT=9199
VITE_EMULATOR_FUNCTIONS_HOST=localhost
VITE_EMULATOR_FUNCTIONS_PORT=5001

# Sentry Configuration (optional)
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# Development Settings
NODE_ENV=development

# Supabase Configuration (for migration)
# Server-side (Firebase Functions)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Client-side (Vite)
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Migration Feature Flags
# Enable dual-write to sync Firestore writes to Supabase
VITE_DUAL_WRITE_ENABLED=true

# Read source for Supabase migration
# - firestore: Read from Firestore (default, current behavior)
# - supabase: Read from Supabase only
# - shadow: Read from both, compare, return Firestore result (for validation)
VITE_READ_SOURCE=firestore